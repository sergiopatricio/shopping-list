.icon-small,
.icon-medium {
  display: inline-block;
  height: 100%;
  text-indent: -9999px;
}

.icon-small {
  width: 1rem;
  font-size: 1rem;
  line-height: 1rem;
}

.icon-medium {
  width: 2rem;
  font-size: 2rem;
  line-height: 2rem;
}


.icon-add {
  -webkit-mask: url(<%= asset_path('plus-square-fill.svg') %>);
  mask: url(<%= asset_path('plus-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: var(--bs-primary);
}
.icon-add:hover {
  background-color: #0b5ed7;
}

.icon-remove {
  -webkit-mask: url(<%= asset_path('dash-square-fill.svg') %>);
  mask: url(<%= asset_path('dash-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: var(--bs-warning);
}
.icon-remove:hover {
  background-color: #ffca2c;
}

.icon-for-later {
  -webkit-mask: url(<%= asset_path('arrow-down-square-fill.svg') %>);
  mask: url(<%= asset_path('arrow-down-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: var(--bs-secondary);
}
.icon-for-later:hover {
  background-color: #5c636a;
}

.icon-for-now {
  -webkit-mask: url(<%= asset_path('arrow-up-square-fill.svg') %>);
  mask: url(<%= asset_path('arrow-up-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: var(--bs-secondary);
}
.icon-for-now:hover {
  background-color: #5c636a;
}

.icon-all-for-now {
  -webkit-mask: url(<%= asset_path('arrow-up-square.svg') %>);
  mask: url(<%= asset_path('arrow-up-square.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: var(--bs-secondary);
}
.icon-all-for-now:hover {
  background-color: #5c636a;
}

.icon-confirm {
  -webkit-mask: url(<%= asset_path('check-square-fill.svg') %>);
  mask: url(<%= asset_path('check-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: var(--bs-primary);
}
.icon-confirm:hover {
  background-color: #0b5ed7;
}

.icon-unconfirm {
  -webkit-mask: url(<%= asset_path('x-square-fill.svg') %>);
  mask: url(<%= asset_path('x-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: var(--bs-warning);
}
.icon-unconfirm:hover {
  background-color: #ffca2c;
}

.icon-move {
  -webkit-mask: url(<%= asset_path('justify.svg') %>);
  mask: url(<%= asset_path('justify.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: var(--bs-body-color);
  line-height: 1.5rem;
  width: 2rem;
  cursor: move;
}

.icon-url {
  -webkit-mask: url(<%= asset_path('box-arrow-in-up-right.svg') %>);
  mask: url(<%= asset_path('box-arrow-in-up-right.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: var(--bs-body-color);
}

.icon-menu {
  -webkit-mask: url(<%= asset_path('three-dots-vertical.svg') %>);
  mask: url(<%= asset_path('three-dots-vertical.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: var(--bs-body-color);
}

.icon-sort-name,
.icon-sort-group {
  display: inline-block;
  text-indent: -9999px;
  background-color: var(--bs-primary);
  width: 1.25rem;
}
.btn-primary .icon-sort-name,
.btn-primary .icon-sort-group,
.btn-outline-primary:hover .icon-sort-name,
.btn-outline-primary:hover .icon-sort-group {
  background-color: var(--bs-body-bg);
}
.icon-sort-name {
  -webkit-mask: url(<%= asset_path('sort-alpha-down.svg') %>);
  mask: url(<%= asset_path('sort-alpha-down.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
}
.icon-sort-group {
  -webkit-mask: url(<%= asset_path('view-stacked.svg') %>);
  mask: url(<%= asset_path('view-stacked.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
}

.icon-back-to-top {
  text-indent: -9999px;
  background: url(<%= asset_path('chevron-up.svg') %>);
  background-color: var(--bs-gray-400);
  background-size: 100% 100%;
  position: fixed;
  bottom: 3rem;
  right: 1rem;
  height: 2rem;
  width: 2rem;
  display: none;
  z-index: 10;
}
